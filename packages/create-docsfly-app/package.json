{
  "name": "create-docsfly-app",
  "version": "1.2.0",
  "description": "Create a new Docsfly documentation app with shadcn/ui and Next.js App Router",
  "keywords": ["docsfly", "docs", "documentation", "nextjs", "shadcn", "cli"],
  "author": "Docsfly Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/docsflyapp/docsfly.git",
    "directory": "packages/create-docsfly-app"
  },
  "target": "node",
  "bin": {
    "create-docsfly-app": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md"
  ],
  "scripts": {
    "prepublishOnly": "bun run build",
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js && echo '#!/usr/bin/env node' | cat - dist/index.js > dist/index.js.tmp && mv dist/index.js.tmp dist/index.js && chmod +x dist/index.js",
    "dev": "bun --watch src/index.ts",
    "test": "bun run build && bun dist/index.js test && rm -rf test",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "ora": "^8.2.0",
    "prompts": "^2.4.2",
    "validate-npm-package-name": "^6.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "22",
    "@types/prompts": "^2.4.9",
    "@types/validate-npm-package-name": "^4.0.2",
    "esbuild": "^0.25.6",
    "typescript": "^5.8.3"
  }
}