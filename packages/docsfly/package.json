{
  "name": "docsfly",
  "version": "1.3.0",
  "description": "Beautiful documentation framework built with Next.js and MDX",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prepublishOnly": "bun run build",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "documentation",
    "mdx",
    "nextjs",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "Docsfly Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/docsflyapp/docsfly"
  },
  "homepage": "https://docsfly.dev",
  "bugs": {
    "url": "https://github.com/docsflyapp/docsfly/issues"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "chokidar": "^4.0.3",
    "gray-matter": "^4.0.3",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.2",
    "react-markdown": "^10.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "@mdx-js/react": "^3.1.0",
    "@mdx-js/mdx": "^3.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "next": "^15.3.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}